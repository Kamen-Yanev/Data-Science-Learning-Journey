   ]
  },
  {
   "cell_type": "code",
   "execution_count": 350,
   "metadata": {},
   "outputs": [
    {
     "name": "stdin",
     "output_type": "stream",
     "text": [
      "Enter number 1:  5\n",
      "Enter number 2:  7\n",
      "Enter number 3:  8\n"
     ]
    },
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "8.0 5.0 6.5\n"
     ]
    }
   ],
   "source": [
    "# Processing three numbers.\n",
    "from pcinput import getFloat\n",
    "num_1 = getFloat('Enter number 1: ')\n",
    "num_2 = getFloat('Enter number 2: ')\n",
    "num_3 = getFloat('Enter number 3: ')\n",
    "the_avg = (max(num_1, num_2, num_3) + min(num_1, num_2, num_3))/2\n",
    "print(max(num_1, num_2, num_3), min(num_1, num_2, num_3), the_avg)\n"
   ]
