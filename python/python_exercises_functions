    "y1 = 5\n",
    "x2 = 3\n",
    "y2 = 9\n",
    "\n",
    "# your code here\n",
    "from math import sqrt\n",
    "distance = sqrt((x2 - x1)**2 + (y2 - y1)**2)\n",
    "print(distance)"
